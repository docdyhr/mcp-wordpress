{
  "testEnvironment": "node",
  "roots": ["<rootDir>/tests"],
  "testMatch": [
    "**/tests/**/*.test.js",
    "**/__tests__/**/*.js",
    "**/?(*.)+(spec|test).js"
  ],
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/dist/",
    "/coverage/"
  ],
  "verbose": true,
  "collectCoverage": false,
  "testTimeout": 30000,
  "maxWorkers": 2,
  "cache": false,
  "forceExit": true,
  "detectOpenHandles": false,
  "globals": {
    "__EXECUTION_CONTEXT__": "jest"
  }
}
