{
  "testEnvironment": "node",
  "roots": ["<rootDir>/tests"],
  "testMatch": [
    "**/typescript-build.test.js",
    "**/server.test.js",
    "**/env-loading.test.js",
    "**/api-upload-timeout.test.js",
    "**/security/**/*.test.js",
    "**/config/**/*.test.js",
    "**/property/**/*.test.js",
    "**/contracts/**/*.test.js",
    "**/performance/**/*.test.js"
  ],
  "collectCoverage": false,
  "testTimeout": 10000,
  "verbose": true,
  "maxWorkers": 2,
  "cache": true,
  "globals": {
    "__EXECUTION_CONTEXT__": "jest"
  }
}